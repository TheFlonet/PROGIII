<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="progiii.client.ClientController">
    <TabPane
            layoutX="240.0" layoutY="130.0"
            prefHeight="400.0" prefWidth="360.0"
            tabClosingPolicy="UNAVAILABLE"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="150.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0">
        <Tab text="InBox">
            <AnchorPane
                    minHeight="0.0" minWidth="0.0"
                    prefHeight="370.0" prefWidth="360.0"/>
        </Tab>
        <Tab text="OutBox">
            <AnchorPane
                    minHeight="0.0" minWidth="0.0"
                    prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
    </TabPane>
    <AnchorPane
            layoutX="15.0" layoutY="75.0"
            prefHeight="200.0" prefWidth="150.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label
                layoutX="25.0" layoutY="15.0"
                text="My E-Mail" textAlignment="CENTER"
                AnchorPane.leftAnchor="20.0"
                AnchorPane.rightAnchor="20.0"
                AnchorPane.topAnchor="15.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Button
                layoutX="25.0" layoutY="50.0"
                mnemonicParsing="false" text="Write"
                AnchorPane.leftAnchor="25.0"
                AnchorPane.rightAnchor="25.0"
                AnchorPane.topAnchor="75.0"
                onAction="#writeEmail"/>
        <Button
                layoutX="50.0" layoutY="310.0"
                mnemonicParsing="false" text="Reconnect"
                AnchorPane.bottomAnchor="60.0"
                AnchorPane.leftAnchor="25.0"
                AnchorPane.rightAnchor="25.0"
                onAction="#reconnect"/>
        <Button
                layoutX="60.0" layoutY="255.0"
                mnemonicParsing="false" text="About"
                AnchorPane.bottomAnchor="25.0"
                AnchorPane.leftAnchor="25.0"
                AnchorPane.rightAnchor="25.0"
                onAction="#about"/>
    </AnchorPane>
</AnchorPane>
