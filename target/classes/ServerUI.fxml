<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="progiii.server.ServerController">

    <TextArea fx:id="logText"
            layoutX="15.0" layoutY="15.0" prefHeight="295.0" prefWidth="570.0" AnchorPane.bottomAnchor="50.0"
            AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0"/>
    <Button fx:id="clearBtn"
            layoutX="15.0" layoutY="360.0" mnemonicParsing="false"
            prefHeight="25.0" prefWidth="160.0" text="Clear Log"
            AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" onAction="#clearLog"/>
    <Button fx:id="dumpBtn"
            layoutX="15.0" layoutY="360.0" mnemonicParsing="false"
            prefHeight="25.0" prefWidth="160.0" text="Dump Log"
            AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0" onAction="#dumpLog"/>
</AnchorPane>
